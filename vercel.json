{
  "buildCommand": "npm run build",
  "framework": "vite",
  "installCommand": "npm install",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/send-welcome-email.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { 
      "source": "/api/send-welcome-email", 
      "destination": "/api/send-welcome-email.js" 
    }
  ]
}