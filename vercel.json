{
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite"

  {
    "version": 2,
    "functions": {
      "api/send-welcome-email/*.js": {
        "memory": 1024,
        "maxDuration": 10
      }
    },
    "routes": [
      {
        "src": "/api/send-welcome-email",
        "dest": "/api/send-welcome-email/index.js"
      }
    ]
  }

}